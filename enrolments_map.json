{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Enrolments by State in 2023",
  "width": 1000,
  "height": 700,
  "projection": {"type": "mercator"},
  "params": [
    {
      "name": "focus",
      "select": {"type": "point", "fields": ["properties.STE_NAME21"], "on": "click", "clear": "mouseout"}
    },
    {
      "name": "hover",
      "select": {"type": "point", "fields": ["properties.STE_NAME21"], "on": "mouseover", "clear": "mouseout"}
    }
  ],
  "data": {
    "url": "STE_2021_AUST_GDA2020.json",
    "format": {"type": "topojson", "feature": "STE_2021_AUST_GDA2020"}
  },
  "transform": [
    {
      "lookup": "properties.STE_NAME21",
      "from": {
        "data": {
          "url": "./state_enrolments_totals_2020_2023.csv",
          "format": {"type": "csv"}
        },
        "key": "State",
        "fields": ["Enrolments", "Year"]
      }
    },
    {"calculate": "toNumber(datum.Enrolments)", "as": "EnrollNum"},
    {"filter": "isValid(datum.EnrollNum)"},
    {
      "joinaggregate": [{"op": "sum", "field": "EnrollNum", "as": "TotalYear"}]
    },
    {"calculate": "datum.EnrollNum / datum.TotalYear", "as": "Share"}
  ],
  "mark": {"type": "geoshape", "stroke": "#FFFFFF", "strokeWidth": 0.8},
  "encoding": {
    "color": {
      "field": "EnrollNum",
      "type": "quantitative",
      "scale": { "domain": [0, 500000], "range": ["#dbeafe", "#1e3a8a"] },
      "legend": { "title": "Enrolments" }
    },
    "strokeWidth": {
      "condition": { "param": "hover", "empty": false, "value": 2.2 },
      "value": 0.8
    },
    "opacity": {
      "condition": { "param": "focus", "value": 1, "empty": true },
      "value": 0.35
    },
    "tooltip": [
      {"field": "properties.STE_NAME21", "type": "nominal", "title": "State"},
      {"field": "EnrollNum", "type": "quantitative", "title": "Enrolments", "format": ",d"},
      {"field": "Share", "type": "quantitative", "title": "Share of year", "format": ".1%"},
      {"field": "TotalYear", "type": "quantitative", "title": "Year total", "format": ",d"}
    ]
  },
  "config": { "view": { "stroke": null }, "axis": { "grid": true } }
}

